include("../main.jl")

function ks_statistic(data, cdf)
    sorted_data = sort(data)
    n = length(data)
    D = 0.0
    for (i, x) in enumerate(sorted_data)
        Fn_minus = (i - 1) / n
        Fn_plus  = i / n
        F = cdf(x)
        d = max(abs(F - Fn_minus), abs(F - Fn_plus))
        D = max(D, d)
    end
    return D
end